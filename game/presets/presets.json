{
    "_comment": "Scene Presets - References transitions from transitions.json and adds shader effects",
    "_design": "Transitions handle movement/sound, presets add shader layers on top",

    "presets": {

        "default": {
            "_comment": "Base default preset - standard transitions, no shader effects",
            "extends": null,

            "active": {
                "shader": null,
                "alpha": 1.0
            },

            "characters": {
                "default": {
                    "lead_in": {
                        "transition": "slide_left_enter",
                        "shader": null
                    },
                    "lead_out": {
                        "transition": "fade_left_exit",
                        "shader": null
                    }
                }
            },

            "dialogbox": {
                "preset": "standard",
                "shader": null,
                "alpha": 1.0
            },

            "background": {
                "shader": null
            },

            "transition": {
                "enter": {"type": "dissolve", "duration": 0.5},
                "exit": {"type": "dissolve", "duration": 0.5}
            }
        },


        "dream_sequence": {
            "_comment": "Ethereal dream - rise up with blur that fades out",
            "extends": "default",

            "active": {
                "shader": {"preset": "dream"},
                "alpha": 0.95
            },

            "characters": {
                "default": {
                    "lead_in": {
                        "transition": "rise_up_enter",
                        "shader": {"preset": "blur_medium", "fade_duration": 0.8}
                    },
                    "lead_out": {
                        "transition": "float_up_exit",
                        "shader": {"preset": "blur_medium", "fade_duration": 0.5}
                    }
                }
            },

            "dialogbox": {
                "preset": "whisper",
                "shader": {"preset": "glow_white"},
                "alpha": 0.8
            },

            "background": {
                "shader": {"preset": "blur_light"}
            },

            "transition": {
                "enter": {"type": "dissolve", "duration": 1.5},
                "exit": {"type": "fade", "duration": 1.0, "color": "#FFFFFF"}
            }
        },


        "nightmare": {
            "_comment": "Dark nightmare - dramatic emerge with glitch shader",
            "extends": "default",

            "active": {
                "shader": {"preset": "horror"},
                "alpha": 1.0
            },

            "characters": {
                "default": {
                    "lead_in": {
                        "transition": "dramatic_emerge_enter",
                        "shader": {"preset": "glitch_medium", "fade_duration": 0.6}
                    },
                    "lead_out": {
                        "transition": "vanish_quick_exit",
                        "shader": {"preset": "glitch_heavy", "fade_duration": 0.15}
                    }
                }
            },

            "dialogbox": {
                "preset": "dramatic",
                "shader": {"preset": "vignette_heavy"},
                "alpha": 0.9
            },

            "background": {
                "shader": {"preset": "shake_light"}
            },

            "transition": {
                "enter": {"type": "dissolve", "duration": 0.6},
                "exit": {"type": "fade", "duration": 0.8, "color": "#000000"}
            }
        },


        "flashback": {
            "_comment": "Memory/flashback - pop in with blur and sepia",
            "extends": "default",

            "active": {
                "shader": {"preset": "flashback"},
                "alpha": 0.9
            },

            "characters": {
                "default": {
                    "lead_in": {
                        "transition": "pop_in_enter",
                        "shader": {"preset": "blur_light", "fade_duration": 0.4}
                    },
                    "lead_out": {
                        "transition": "vanish_quick_exit",
                        "shader": {"preset": "blur_light", "fade_duration": 0.15}
                    }
                }
            },

            "dialogbox": {
                "preset": "standard",
                "shader": {"preset": "sepia_light"},
                "alpha": 0.85
            },

            "background": {
                "shader": {"preset": "sepia"}
            },

            "transition": {
                "enter": {"type": "fade", "duration": 1.5, "color": "#FFFFFF"},
                "exit": {"type": "fade", "duration": 1.2, "color": "#FFFFFF"}
            }
        },


        "battle_intense": {
            "_comment": "Action battle - fast dramatic entrances with radial blur",
            "extends": "default",

            "active": {
                "shader": {"preset": "high_contrast"},
                "alpha": 1.0
            },

            "characters": {
                "default": {
                    "lead_in": {
                        "transition": "dramatic_left_enter",
                        "shader": {"preset": "blur_radial_light", "fade_duration": 0.3}
                    },
                    "lead_out": {
                        "transition": "fade_right_exit",
                        "shader": {"preset": "blur_radial_light", "fade_duration": 0.2}
                    }
                },
                "hero": {
                    "lead_in": {
                        "transition": "dramatic_left_enter",
