                    },
                    "lead_out": {
                        "transition": "fade_right_exit",
                        "shader": null
                    }
                }
            },

            "dialogbox": {
                "preset": "dramatic",
                "shader": null,
                "alpha": 0.9
            },

            "transition": {
                "enter": {"type": "dissolve", "duration": 0.3},
                "exit": {"type": "dissolve", "duration": 0.3}
            }
        },


        "horror_tension": {
            "_comment": "Horror/tension - slow dramatic emergence with vignette",
