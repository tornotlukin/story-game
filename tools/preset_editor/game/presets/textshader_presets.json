        "shader": "Text shader name (wave, jitter, typewriter, etc.) or null for no shader",
        "shader_params": "Parameters for the text shader (u_amplitude, u_speed, etc.)",
        "text": {
            "font": "Font file path relative to game directory",
            "size": "Font size in pixels",
            "color": "Text color in hex format (#RRGGBB)",
            "outlines": "List of outlines: [[size, color, x_offset, y_offset], ...]",
            "kerning": "Letter spacing adjustment in pixels",
            "line_spacing": "Extra space between lines in pixels",
            "slow_cps": "Characters per second for typewriter effect (0 = instant)",
            "bold": "true/false",
            "italic": "true/false"
        }
    },
    "_available_shaders": [
        "null (no shader - text styling only)",
        "dissolve - Fade in character by character",
        "flip - Flip characters as they appear",
        "jitter - Shake/vibrate characters",
        "linetexture - Apply texture to text",
        "offset - Offset text position",
        "slowalpha - Slow alpha fade during display",
        "texture - Apply texture overlay",
        "typewriter - Classic typewriter reveal",
        "wave - Sine wave displacement",
        "zoom - Zoom in characters as they appear"
    ],
